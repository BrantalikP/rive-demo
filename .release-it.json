{
  "git": {
    "requireCleanWorkingDir": false,
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "push": true,
    "ignoreFiles": ["eas.json"]
  },
  "github": {
    "release": true,
    "releaseName": "Release ${version}",
    "tokenRef": "GITHUB_TOKEN"
  },
  "npm": false,
  "plugins": {
    "@release-it/conventional-changelog": {
      "header": "# Changelog",
      "preset": {
        "name": "conventionalcommits",
        "types": [
          { "type": "feat", "section": "âœ¨ Features" },
          { "type": "fix", "section": "ğŸ› Bug Fixes" },
          { "type": "chore", "section": "ğŸ”§ Chores" },
          { "type": "ci", "section": "ğŸ¤– Continuous Integration" },
          { "type": "docs", "section": "ğŸ“„ Documentation" },
          { "type": "refactor", "section": "ğŸ’… Code Refactoring" },
          { "type": "test", "section": "ğŸ§ª Tests" },
          { "type": "revert", "section": "ğŸ”„ Reverts" }
        ]
      },
      "infile": "CHANGELOG.md",
      "ignoreRecommendedBump": true
    },
    "release-it-webhook": {
      "webhook": {
        "url": "https://hooks.slack.com/triggers/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"
      }
    }
  },
  "hooks": {
    "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
  }
}
